OBJDIRS     += crypto
CRYPTO2SRC  := elgamal.cc 

all:    $(OBJDIR)/libcrypto.so
$(OBJDIR)/libcrypto.so: $(patsubst %.cc,$(OBJDIR)/crypto/%.o,$(CRYPTO2SRC))
	$(CXX) -shared -o $@ $^ $(LDFLAGS)

all:	$(OBJDIR)/crypto/test_crypto 
$(OBJDIR)/crypto/test_crypto: $(OBJDIR)/crypto/test_crypto.o $(OBJDIR)/libcrypto.so
	$(CXX) $< -o $@ $(LDFLAGS) -lcrypto\
	   -Wl,-rpath=$(NTLLIBPATH) -L$(NTLLIBPATH) -lntl -lgmp 
